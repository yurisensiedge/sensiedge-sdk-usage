<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sensiedgeexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_sensiedge_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sensiedgeexample.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sensiedgeexample.FeatureListActivity"
            android:label="@string/title_activity_demo"
            android:launchMode="singleTop"
            android:parentActivityName="com.sensiedgeexample.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sensiedgeexample.MainActivity"/>
        </activity>

    </application>

</manifest>